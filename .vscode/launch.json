{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run mcasm with ucode",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/mcasm",
            "cwd": "${workspaceRoot}",
            "args": [
                "-o",
                "mcCode",
                "-t",
                "./src/ports.ucode",
                "./src/mcCode.ucode"
            ],
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
                "stopAtEntry": true,
                "preLaunchTask":
        }
    ]
}